{
  "$schema": "https://railway.app/railway.schema.json",
  "projects": {
    "backend": {
      "source": "backend",
      "deploy": {
        "startCommand": "npm run start:backend",
        "healthcheckPath": "/health",
        "restartPolicyType": "on_failure"
      }
    },
    "frontend": {
      "source": "frontend",
      "deploy": {
        "startCommand": "npm run serve",
        "healthcheckPath": "/",
        "restartPolicyType": "on_failure"
      }
    }
  }
}
